# Shielded planets 02
entity = {
	name = "shielded_planet_02_entity"
	pdxmesh = "shielded_planet_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
		texture_diffuse = "planet_shieled_diffuse.dds" #it's just plain black, diffuse is painfully white otherwise.
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	
	##pole texture override
	meshsettings = {
	name = "polesShape"
		texture_diffuse = "planet_shieled_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	
	##cloud texture override
	meshsettings = {
	name = "clouds_geosphereShape"
		texture_diffuse = "ig_shielded_02.dds"
		texture_normal = "nonormal.dds" #no normals, can't see the difference.
		texture_specular = "nospec.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
	name = "clouds_shadow_geosphereShape"
		texture_diffuse = "ig_shielded_02.dds"
		texture_normal = "nonormal.dds" #no normals, can't see the difference.
		texture_specular = "nospec.dds"
	}

	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
}
